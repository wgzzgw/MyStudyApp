<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_reset_gender"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/menu_title_bar_with_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/man"
            android:layout_width="match_parent"
            android:layout_height="46.67dp"
            android:background="#FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="男"
                android:textColor="#FF2C2C2C"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/mangou"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="280dp"
                android:src="@drawable/dagou"
                android:visibility="visible"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#FFE8EDF3"/>

        <LinearLayout
            android:id="@+id/women"
            android:layout_width="match_parent"
            android:layout_height="46.67dp"
            android:background="#FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="女"
                android:textColor="#FF2C2C2C"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/womengou"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="280dp"
                android:src="@drawable/dagou"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#FFE8EDF3"/>

        <LinearLayout
            android:id="@+id/baomi"
            android:layout_width="match_parent"
            android:layout_height="46.67dp"
            android:background="#FFFFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="23dp"
                android:text="保密"
                android:textColor="#FF2C2C2C"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/baomigou"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="268dp"
                android:src="@drawable/dagou"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE8EDF3"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!--Style for buttons without an explicit border, often used in groups-->
        <!--name="borderlessButtonStyle-->
        <Button
            android:id="@+id/btn_sure"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/blue_btn_selector"
            android:textColor="@drawable/blue_text_selector"
            android:text="确认"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>

