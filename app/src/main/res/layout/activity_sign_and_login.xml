<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleX="3"
        android:scaleY="3"
         />

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:context="com.example.loginandsign.SignAndLogin">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#C378C8BE"
            android:gravity="center">

            <EditText
                android:id="@+id/email2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="     用户名"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email2"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="   输入密码"
                android:inputType="textPassword"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass2"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="   确认密码"
                android:inputType="textPassword"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:rotation="90"
                android:text="注册"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.25"
            android:background="#C37A80C1"
            android:gravity="center">


            <EditText
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="    账号"
                android:inputType="textCapSentences"
                android:padding="20dp" />


            <EditText
                android:id="@+id/pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="  密码"
                android:inputType="textPassword"
                android:padding="20dp" />

            <LinearLayout
                android:id="@+id/remember_pass_layout"
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:layout_centerHorizontal="true">
                <CheckBox
                    android:id="@+id/remember_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码" />
            </LinearLayout>
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remember_pass_layout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:text="登录"
                android:textColor="#000000"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            />


        <ImageView
            android:id="@+id/wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
             />

    </LinearLayout>


</FrameLayout>