<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/convitem"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/btn_list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">
<FrameLayout
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10.67dp">
    <ImageView
        android:id="@+id/conv_friend_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rc_default_portrait" />
    <TextView
        android:textSize="9sp"
        android:gravity="center"
        android:id="@+id/conv_verification_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="43dp"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:background="@drawable/red_circle"
        android:textColor="@android:color/white"/>
</FrameLayout>
    <LinearLayout
        android:id="@+id/conv_message_layout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="3dp">

        <TextView
            android:id="@+id/conv_friendname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:text="用户名"
            android:textColor="#2C2C2C"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/conv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textColor="#708090"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/conv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="75dp"
        />
</LinearLayout>